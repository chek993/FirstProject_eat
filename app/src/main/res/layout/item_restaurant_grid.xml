<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="300dp"
    android:id="@+id/restaurant_card_view"
    android:layout_margin="5dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:id="@+id/restaurant_iv"
            android:scaleType="centerCrop"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_tv"
            android:layout_below="@+id/restaurant_iv"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:textSize="18dp"
            android:layout_marginTop="5dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_tv"
            android:layout_below="@+id/name_tv"
            android:layout_above="@+id/min_order_value_tv"
            android:paddingTop="5dp"
            android:layout_marginStart="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/min_order_tv"
            android:text="@string/min_order"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="5dp"
            android:layout_marginEnd="5dp"/>

        <Text
            View
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/min_order_value_tv"
            android:layout_alignParentBottom="true"
            android:layout_toEndOf="@+id/min_order_tv"
            android:layout_marginBottom="10dp"
            android:layout_marginEnd="5dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>