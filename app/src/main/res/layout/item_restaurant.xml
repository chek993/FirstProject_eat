<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="150dp"
    android:id="@+id/restaurant_card_view"
    android:padding="5dp"
    android:layout_margin="5dp"
    android:elevation="4dp">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:id="@+id/restaurant_iv"
            android:layout_width="145dp"
            android:layout_height="145dp"
            android:layout_margin="5dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/name_tv"
            android:layout_toEndOf="@+id/restaurant_iv"
            android:paddingTop="10dp"
            android:textStyle="bold"
            android:textSize="18dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/address_tv"
            android:layout_toEndOf="@+id/restaurant_iv"
            android:layout_above="@+id/min_order_tv"
            android:layout_below="@+id/name_tv"
            android:paddingTop="5dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/min_order_tv"
            android:layout_toEndOf="@+id/restaurant_iv"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"
            android:paddingEnd="5dp"
            android:text="@string/min_order"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/min_order_value_tv"
            android:layout_toEndOf="@+id/min_order_tv"
            android:layout_alignParentBottom="true"
            android:paddingBottom="10dp"/>

    </RelativeLayout>

</android.support.v7.widget.CardView>